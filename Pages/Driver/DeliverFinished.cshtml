@page "{waterDeliveryId:int?}"
@model CisternasGAMC.Pages.Driver.DeliverFinishedModel
@{
    Layout = "_LayoutDriver";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-container {
        max-width: 500px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: bold;
        }

    .btn-primary {
        width: 100%;
        font-size: 1.2rem;
        padding: 0.75rem;
    }
</style>

<div class="container">
    <div class="form-container">
        <h2>@Model.WaterDelivery?.Otb?.Name</h2>

        <form method="post" asp-page-handler="Deliver">
            <input type="hidden" name="waterDeliveryId" value="@Model.WaterDeliveryId" />
            <div class="mb-4">
                <label for="deliveredAmount" class="form-label">Monto Generado</label>
                <input type="number" class="form-control" id="deliveredAmount" name="deliveredAmount"
                       placeholder="Ingrese el monto generado" step="0.01" required min="0" />
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle-fill"></i> Terminar Entrega
            </button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
