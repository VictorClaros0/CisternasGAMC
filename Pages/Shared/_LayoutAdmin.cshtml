<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CisternasGAMC</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="@Url.Content("~/lib/fontawesome-free/css/all.min.css")">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/adminlte.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/CisternasGAMC.styles.css")">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button" aria-label="Toggle navigation">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Page("/Index")" class="navbar-brand">
                        <img src="@Url.Content("~/images/Logos/LogoCochabamba.png")" alt="Logo CisternasGAMC" class="brand-image img-circle elevation-3" style="max-height: 30px; opacity: .8">
                        <span class="brand-text font-weight-light">CisternasGAMC</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <div class="sidebar">
                <!-- User panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <i class="fas fa-user-circle fa-2x text-light" title="Perfil de usuario"></i>
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Nombre de Usuario</a>
                    </div>
                </div>

                <!-- Main Menu -->
                <nav class="mt-2" aria-label="Menú principal">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Page("/Admin/Cruds/CisternCrud/index")" class="nav-link" aria-current="page">
                                <i class="nav-icon fas fa-tachometer-alt" title="Dashboard de Cisternas"></i>
                                <p>Cisternas</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Page("/Admin/Cruds/OtbCrud/index")" class="nav-link">
                                <i class="nav-icon fas fa-users" title="Comunidades OTB"></i>
                                <p>OTB</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Page("/Admin/Cruds/UserCrud/index")" class="nav-link">
                                <i class="nav-icon fas fa-edit" title="Gestionar formularios"></i>
                                <p>Usuarios</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Page("/Admin/Cruds/WaterDeliveryCrud/index")" class="nav-link">
                                <i class="nav-icon fas fa-shipping-fast" title="Gestionar entregas"></i>
                                <p>Entregas</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Page("/Admin/Cruds/WaterDeliveryCrud/Create")" class="nav-link">
                                <i class="nav-icon fas fa-plus-circle" title="Generar nueva entrega"></i>
                                <p>Generar entrega</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Page("/Admin/Report/index")" class="nav-link">
                                <i class="nav-icon fas fa-plus-circle" title="Generar nueva entrega"></i>
                                <p>Reportes</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>&copy; 2024 - CisternasGAMC</strong> - Todos los derechos reservados.
            <div class="float-right d-none d-sm-inline-block">
                <b>Versión</b> 1.0.0
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="@Url.Content("~/lib/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/js/adminlte.js")"></script>
    <script src="@Url.Content("~/lib/chart.js/Chart.min.js")"></script>
    <script src="@Url.Content("~/js/demo.js")"></script>
    <script src="@Url.Content("~/js/pages/dashboard3.js")"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
