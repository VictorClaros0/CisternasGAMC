<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CisternasGAMC - Simplificado</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="@Url.Content("~/lib/fontawesome-free/css/all.min.css")" asp-append-version="true">
    <link rel="stylesheet" href="@Url.Content("~/css/adminlte.min.css")" asp-append-version="true">
    <link rel="stylesheet" href="@Url.Content("~/CisternasGAMC.styles.css")" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="navbar navbar-expand navbar-dark">
            <a href="@Url.Page("/Index")" class="navbar-brand">
                <img src="@Url.Content("~/images/Logos/LogoCochabamba.png")" alt="Logo CisternasGAMC" class="brand-image img-circle elevation-3" style="max-height: 30px; opacity: .8">
                <span class="brand-text font-weight-light">CisternasGAMC</span>
            </a>
        </nav>

        <!-- Content Area principal -->
        <div class="content">
            <div class="container">
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <div class="footer-links">
                <a href="#">Política de Privacidad</a>
                <a href="#">Términos y Condiciones</a>
                <a href="#">Contacto</a>
            </div>
            <strong>&copy; 2024 - CisternasGAMC</strong> - Todos los derechos reservados.
            <div><b>Versión</b> 1.0.0</div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="@Url.Content("~/lib/jquery/jquery.min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/bootstrap/js/bootstrap.bundle.min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/adminlte.js")" asp-append-version="true"></script>
</body>
</html>
