@page
@model CisternasGAMC.Pages.Admin.Cruds.OtbCrud.DeleteModel

@{
    ViewData["Title"] = "Eliminar";



    Layout = "_LayoutAdmin";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Eliminar OTB</h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">¿Está seguro de que desea eliminar esta OTB?</h3>
                    </div>
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>Nombre</dt>
                            <dd>@Html.DisplayFor(model => model.Otb.Name)</dd>
                            <dt>Cantidad de Familias</dt>
                            <dd>@Html.DisplayFor(model => model.Otb.FamilyCount)</dd>
                            <dt>Distrito</dt>
                            <dd>@Html.DisplayFor(model => model.Otb.District)</dd>
                        </dl>
                    </div>
                    <div class="box-footer">
                        <form method="post">
                            <input type="hidden" asp-for="Otb.OtbId" />
                            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                            <a asp-page="./Index" class="btn btn-default">Volver a la Lista</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
