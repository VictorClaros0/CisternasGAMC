@page
@model CisternasGAMC.Pages.Admin.Cruds.OtbCrud.IndexModel
@{
    ViewData["Title"] = "Índice de OTBs";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <h1 class="mt-4">OTBs</h1>

    <div class="card mb-4 shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Lista de OTBs</h5>
            <a asp-page="./Create" class="btn btn-primary btn-sm">Agregar Nueva OTB</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Numero de Familias</th>
                            <th>Distrito</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Otb)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.FamilyCount)</td>
                                <td>@Html.DisplayFor(modelItem => item.District)</td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.OtbId" class="btn btn-warning btn-sm">Editar</a>
                                    <a asp-page="./Details" asp-route-id="@item.OtbId" class="btn btn-info btn-sm">Detalles</a>
                                    <a asp-page="./Delete" asp-route-id="@item.OtbId" class="btn btn-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
