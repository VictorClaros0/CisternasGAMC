@page
@model CisternasGAMC.Pages.Admin.Cruds.OtbCrud.IndexModel

@{
    ViewData["Title"] = "Índice";

    Layout = "_LayoutAdmin";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>OTBs</h1>

    </section>

    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Lista</h3>
                <a asp-page="./Create" class="btn btn-primary pull-right">Agregar Nueva OTB</a>
            </div>
            <div class="box-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Numero de Familias</th>
                            <th>Distrito</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Otb)

                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.FamilyCount)</td>
                                <td>@Html.DisplayFor(modelItem => item.District)</td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.OtbId" class="btn btn-xs btn-primary">Editar</a> |
                                    <a asp-page="./Details" asp-route-id="@item.OtbId" class="btn btn-xs btn-info">Detalles</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.OtbId" class="btn btn-xs btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>