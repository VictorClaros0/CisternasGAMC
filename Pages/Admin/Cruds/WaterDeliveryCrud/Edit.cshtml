@page
@model CisternasGAMC.Pages.Admin.Cruds.WaterDeliveryCrud.EditModel

@{
    ViewData["Title"] = "Edit Water Delivery";

    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <h1 class="mt-4">Editar Entrega</h1>
    <div class="card mb-4">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WaterDelivery.WaterDeliveryId" />

                <div class="form-group">
                    <label asp-for="WaterDelivery.CisternId" class="control-label">Numero de placa de Cisterna</label>
                    <select asp-for="WaterDelivery.CisternId" class="form-control" asp-items="Model.Cisterns">
                        <option value="">-- Seleccione una cisterna --</option>
                    </select>
                    <span asp-validation-for="WaterDelivery.CisternId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WaterDelivery.DriverId" class="control-label">Nombre Conductor</label>
                    <select asp-for="WaterDelivery.DriverId" class="form-control" asp-items="Model.Drivers">
                        <option value="">-- Seleccione un conductor --</option>
                    </select>
                    <span asp-validation-for="WaterDelivery.DriverId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WaterDelivery.OtbId" class="control-label">Elija la OTB</label>
                    <select asp-for="WaterDelivery.OtbId" class="form-control" asp-items="Model.Otbs">
                        <option value="">-- Seleccione una OTB --</option>
                    </select>
                    <span asp-validation-for="WaterDelivery.OtbId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WaterDelivery.DeliveryDate" class="control-label">Fecha de Entrega</label>
                    <input asp-for="WaterDelivery.DeliveryDate" class="form-control" />
                    <span asp-validation-for="WaterDelivery.DeliveryDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WaterDelivery.DeliveredAmount" class="control-label">Cantidad Entregada</label>
                    <input asp-for="WaterDelivery.DeliveredAmount" class="form-control" />
                    <span asp-validation-for="WaterDelivery.DeliveredAmount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WaterDelivery.DeliveryStatus" class="control-label">Estado</label>
                    <select asp-for="WaterDelivery.DeliveryStatus" class="form-control">
                        <option value="1">Programado</option>
                        <option value="2">En entrega</option>
                        <option value="3">Finalizado</option>
                        <option value="4">Cancelado</option>
                    </select>
                    <span asp-validation-for="WaterDelivery.DeliveryStatus" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
