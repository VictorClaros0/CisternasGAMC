@page
@model CisternasGAMC.Pages.Admin.Cruds.UserCrud.DeleteModel

@{
    ViewData["Title"] = "Eliminar Usuario";



    Layout = "_LayoutAdmin";
}

<section class="content-header">
    <h1>Eliminar Usuario</h1>
</section>

<section class="content">
    <div class="box box-danger">
        <div class="box-body">
            <h4>¿Está seguro de que desea eliminar este usuario?</h4>
            <dl class="dl-horizontal">
                <dt>Nombre</dt>
                <dd>@Model.User.FirstName</dd>
                <dt>Apellido</dt>
                <dd>@Model.User.LastName</dd>
                <dt>Correo Electrónico</dt>
                <dd>@Model.User.Email</dd>
                <dt>Número de Teléfono</dt>
                <dd>@Model.User.PhoneNumber</dd>
                <dt>Rol</dt>
                <dd>
                    @(Model.User.Role switch
                    {
                        "admin" => "Administrador",
                        "driver" => "Conductor"
                    })
                </dd>
                <dt>Estado</dt>
                <dd>
                    @(Model.User.Status switch

                    {
                        1 => "Activo",
                        2 => "Inactivo",
                        3 => "Despedido",
                        _ => "Desconocido"

                    })
                </dd>

            </dl>
            <form method="post">
                <input type="hidden" asp-for="User.UserId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-default">Cancelar</a>
            </form>
        </div>
    </div>
</section>